10 REM **** GRAFICOS *** 
20 ' INICIALIZACION
30 XC=128:YC=96
40 R=8
50 SP=6
60 RATIO=1.5
70 RX=1
80 RY=1
90 PI=3.14159:FLAG=1
100 XB=0:YB=0:XE=0:YE=0:XM=0:YM=0
120 DIM A(5):A(0)=0:A(1)=-15:A(2)=0:A(3)=-15:A(4)=0:A(5)=-15
130 FOR NO=0 TO 5
140 A(NO)=A(NO)/180*PI
150 NEXT NO 
160 C=2
170 ' PROGRAMA PRINCIPAL
180 SCREEN 2:COLOR 7,1,1:CLS
190 VW=0:FOR ANGLE=0 TO 360 STEP SP
200 VW=VW+1:C=5
210 AG=ANGLE/180*PI
220 RB=R
230 FOR NO=0 TO 5
240 X(NO)=RB*RATIO*COS(AG+A(NO))*RX
250 Y(NO)=RB*RATIO*SIN(AG+A(NO))*RY
260 RB=RB*RATIO
270 NEXT NO
280 FOR NO=0 TO 4
290 LINE(X(NO)+XC,Y(NO)+YC)-(X(NO+1)+XC,Y(NO+1)+YC),C
300 NEXT NO
310 IF XB<>0 AND FLAG=-1 THEN LINE(XB+XC,YB+YC)-(X(0)+XC,Y(0)+YC),C
320 IF XE<>0 AND FLAG=-1 THEN LINE(XE+XC,YE+YC)-(X(5)+XC,Y(5)+YC),C
330 IF XM<>0 AND FLAG=-1 THEN PAINT((XM+X(4)+XC*2)/2,(YM+Y(4)+YC*2)/2),C
340 XB=X(0):YB=Y(0)
350 XE=X(5):YE=Y(5)
360 XM=X(4):YM=Y(4)
370 FLAG=-FLAG
380 IF VW=1 THEN 390 ELSE VW=0
390 NEXT ANGLE
400 FOR I=1 TO 5000:NEXT I:CLEAR:CLS:GOTO 10
