5 ' MOVE02.BAS
10 SCREEN 2
20 SPRITE$(1)=STRING$(8,CHR$(255))
30 DEFINT X,Y
40 X=0:Y=0
60 ST=STICK(0):IF ST<>0 THEN GOSUB 400
121 GOTO 60 'Movimiento del sprite del jugador
400 ' MOVE BAT
410 BX=BX+6*((ST=7)-(ST=3))
420 IF BX<=14 THEN BX=14
430 IF BX>=235 THEN BX=235
440 PUT SPRITE 0,(BX,181),2,1
460 RETURN
