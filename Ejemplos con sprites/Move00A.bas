05 ' MOVE00A.BAS
10 SCREEN 2
20 SPRITE$(1)=STRING$(8,CHR$(255))
30 DEFINT X,Y
40 X=0:Y=0:X1=10:X2=20:X3=30:X4=40
50 SPRITE ON
55 ON SPRITE GOSUB 180 'Si hay colision de sprites saltamos a la linea 180
60 S=STICK(0)
70 IF S=1 THEN Y=Y-3
71 IF S=2 THEN Y=Y-3:X=X+3
80 IF S=3 THEN X=X+3
81 IF S=4 THEN X=X+3:Y=Y+3
90 IF S=5 THEN Y=Y+3
91 IF S=6 THEN Y=Y+3:X=X-3
100 IF S=7 THEN X=X-3
101 IF S=8 THEN X=X-3:Y=Y-3
110 PUT SPRITE 0, (X,Y), 2, 1
111 PUT SPRITE 0, (X,Y), 2, 1
112 PUT SPRITE 1, (X1,20), 6, 1
113 PUT SPRITE 2, (X2,40), 7, 1
114 PUT SPRITE 3, (X3,60), 8, 1
121 GOTO 60 'Movimiento del sprite del jugador
180 SPRITE OFF:X=0:Y=0:X1=10:X2=20:X3=30:X4=40
181 PUT SPRITE 0, (X,Y), 2, 1
182 PUT SPRITE 1, (X1+5,20), 6, 1
183 PUT SPRITE 2, (X2+10,40), 7, 1
184 PUT SPRITE 3, (X3+15,60), 8, 1
