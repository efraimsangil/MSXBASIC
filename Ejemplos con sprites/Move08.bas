10 ' MOVE08.BAS
20 'Movimiento de sprite simulando una mosca.
30 SCREEN 2
40 SPRITE$(1)=STRING$(8,CHR$(255))
50 DEFINT X,Y
60 X=100:Y=170:VO=0:VA=0:VB=0:Y1=20:VC=0:I=0:I2=0:X1=100:A=0:IX=0
70 S=STICK(0)
80 IF S=1 THEN Y=Y-3
90 IF S=2 THEN Y=Y-3:X=X+3
100 IF S=3 THEN X=X+3
110 IF S=4 THEN X=X+3:Y=Y+3
120 IF S=5 THEN Y=Y+3
130 IF S=6 THEN Y=Y+3:X=X-3
140 IF S=7 THEN X=X-3
150 IF S=8 THEN X=X-3:Y=Y-3
160 PUT SPRITE 0, (X,Y), 2, 1
170 GOSUB 200 ' Movimiento de los sprites autonomos
180 GOTO 70 'Movimiento del sprite del jugador
190 'Que no se salgan de la pantalla y reboten
200 A=A+1
201 RR=INT(9*RND(-1*TIME))
210 IY=SIN(A*3.141516)+RR
211 IX=COS(A*3.141516)+RR
230 I2=I2+0.5
250 IF X1 < 200 AND VO=0 THEN X1=X1+IX ELSE VO=1
260 IF X1 > 10 AND VO=1 THEN X1=X1+IX ELSE VO=0
270 IF Y1 > 100 AND VA=0 THEN Y1=Y1-2 ELSE VA=1
280 IF Y1 < 10 AND VA=0 THEN Y1=Y1+2 ELSE VA=1
290 PUT SPRITE 1,((X1+IX)),(Y1+IY)),6,1
300 RETURN
