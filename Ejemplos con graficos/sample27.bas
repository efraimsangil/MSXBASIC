10 REM **** GRAFICOS ****
20 ' INICIALIZACION
30 DIM R(9),S(9)
40 XS=3
50 YW=50
70 R(1)=48:R(2)=10:R(3)=5:R(4)=5:R(5)=5:R(6)=5:R(7)=10:R(8)=48:R(0)=0:S(0)=0
80 FOR NO=1 TO 8
90 S(NO)=S(NO-1)+R(NO)
100 NEXT NO
110 PI=3.14155
120 'PROGRAMA PRINCIPAL
130 SCREEN 2:COLOR 8,1,1:CLS
140 FOR X=36 TO 222 STEP XS
150 Y=YW*SIN(XS*X/180*PI)
160 FOR NO=1 TO 7 STEP 2
170 CIRCLE(X-R(NO)*COS(PI/4),(S(NO-1)*2+R(NO))*SIN(PI/4)+Y),R(NO),,PI*7/4,PI/4 
180 CIRCLE(X+R(NO+1)*COS(PI/4),(S(NO)*2+R(NO+1))*SIN(PI/4)+Y),R(NO+1),,PI*3/4,PI*5/4
190 NEXT NO 
200 NEXT X
210 FOR I=1 TO 5000:NEXT I :CLEAR:CLS:GOTO 20
