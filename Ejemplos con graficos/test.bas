10 REM **** GRAFICOS ****
20 ' INICIALIZACION
30 OPEN "GRP:" AS #1
40 DIM R(9),S(9)
50 XS=3
60 YW=50
70 R(1)=48:R(2)=10:R(3)=5:R(4)=5:R(5)=5:R(6)=5:R(7)=10:R(8)=48:R(0)=0:S(0)=0
80 FOR NO=1 TO 8
90 S(NO)=S(NO-1)+R(NO)
100 NEXT NO
110 PI=3.14155
120 'PROGRAMA PRINCIPAL
130 SCREEN 2:COLOR 8,1,1:CLS
140 FOR X=36 TO 222 STEP XS
150 Y=YW*SIN(XS*X/180*PI)
160 FOR NO=1 TO 7 STEP 2
170 DRAW "BM100,20"
180 AA=X-R(NO)*COS(PI/4)
190 PRINT#1,"AA:";AA
200 DRAW "BM100,30"
210 BB=S(NO-1)*2+R(NO)
220 PRINT#1,"BB:";BB
230 CIRCLE(AA,(BB)*SIN(PI/4)+Y),R(NO),NO+1,PI*7/4,PI/4
240 IF INKEY$="" THEN GOTO 240
250 'CIRCLE(X+R(NO+1)*COS(PI/4),(S(NO)*2+R(NO+1))*SIN(PI/4)+Y),R(NO+1),,PI*3/4,PI*5/4
260 NEXT NO 
270 NEXT X
280 FOR I=1 TO 5000:NEXT I :CLEAR:CLS:GOTO 20
