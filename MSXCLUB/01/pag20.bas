10 REM ***REBOTES***
20 CLS:INPUT "TECLEE UN NUMERO ENTERO:";F
30 FOR I=1 TO F:Y=RND(1):NEXT
40 COLOR 1,10:CLS:KEY OFF
50 PRINT "0123456789ABCDEFGHIKJLMNOPQRSTUVWXYZ"
60 X=INT(RND(1)*18+2)
70 Y=INT(RND(1)*18+2)
80 LOCATE 0,X:PRINT "*"
90 LOCATE 39,Y:PRINT "$"
100 LOCATE 0,23:PRINT "TU GOLPE:";:R$=INPUT$(1)
110 S=0
120 T=X
130 FOR J=1 TO 37
140 T=T-X(ASC(R$)-ASC("0")+7*(R$>="A"))
150 IF T>=22 OR T<=0 THEN 220
160 LOCATE J,T:PRINT "*"
170 NEXT J
180 IF ABS(T-Y)<3 THEN PRINT "BRAVO:";S;"REBOTES":PLAY "CDE"
190 PRINT "OTRA PARTIDA (S/N):";:R$=INPUT$(1)
200 IF R$="N" THEN END
210 GOTO 40
220 X=-X
230 S=S+1
240 GOTO 170
